<%= form_for(@order) do |f| %>
    <%= render 'layouts/error_messages', :target => @order %>

  <div class="field">
    <%= f.label :name, t('activerecord.attributes.order.name') %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone, t('activerecord.attributes.order.phone') %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email, t('activerecord.attributes.order.email') %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :address, t('activerecord.attributes.order.address') %><br />
    <%= f.text_area :address, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :description, t('activerecord.attributes.order.description') %><br />
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <% if !@order.new_record? && signed_in? %>
    <div class="field">
      <%= f.label :complete, t('activerecord.attributes.order.complete') %>
      <%= f.check_box :complete %>
    </div>
  <% end %>
  <div class="actions">
    <% if @order.new_record? %>
      <%= f.submit 'Оформить' %>
    <% else %>
      <%= f.submit %>
    <% end %>
  </div>
<% end %>
