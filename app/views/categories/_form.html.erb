<%= form_for(@category, :html => { :multipart => true }) do |f| %>
    <%= render 'layouts/error_messages', :target => @category %>

  <div class="field">
    <%= f.label :title, t('activerecord.attributes.category.title') %><br />
    <%= f.text_field :title %>
  </div>
    <div class="field">
      <%= f.label :description, t('activerecord.attributes.category.description') %>
      <br/>
      <%= textile_editor :category, :description, :rows => 5  %>
    </div>
  <div class="field">
    <%= f.label :image, t('activerecord.attributes.category.image') %><br/>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= raw textile_editor_initialize(:framework => :jquery) %>
